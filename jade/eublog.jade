doctype html
head
  title EuBlog
  link(rel="stylesheet",href="http://yui.yahooapis.com/pure/0.4.2/pure-min.css")
  link(rel="stylesheet",href="app.css")
body
  #loadingdiv
    h1 Loading, please wait
  #logindiv.hide
    fieldset
      legend Login to manage your Blog
      input(id="AWS_ID",placeholder="AWS ID")
      input(id="AWS_SECRET",placeholder="AWS SECRET")
      input.pure-button-primary.pure-button(type="button",value="click",id="loginbtn")
  #managediv.hide
    button#compile Compile
    #editor
    iframe#rendered

  script(src="https://sdk.amazonaws.com/js/aws-sdk-2.0.0-rc.18.min.js")
  script(src="app.js")
